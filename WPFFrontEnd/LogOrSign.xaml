<Page x:Class="WPFFrontEnd.LogOrSign"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFFrontEnd"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogOrSign">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="gdata\images\Background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Rectangle Fill="Black" Opacity="0.5" Grid.RowSpan="3"/>

        <Label Content="Welcome to the club, body ;)" Margin="15,35" 
           Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"
           FontSize="45" FontFamily="Inter" FontWeight="Black" Foreground="White"/>

        <Button x:Name="LoginButton" Style="{StaticResource RoundedGradientButton}" Content="Login" Margin="75,35" Grid.Row="1"/>

        <Button x:Name="SignUpButton" Style="{StaticResource RoundedGradientButton}" Content="Sign Up" Margin="75,35" Grid.Row="2"/>
    </Grid>
</Page>
